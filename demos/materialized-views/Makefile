COMPOSE  := docker compose -f ../docker-compose.yml
KEYSPACE := viewdemo

.PHONY: db-up db-down seed run clean

db-up:                          ## Start ScyllaDB and create keyspace
	@echo ""
	@echo "  ðŸ”® THE ORACLE'S MIRROR â€” Dimension-9"
	@echo "  â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
	@echo "  The Oracle is awakening..."
	@echo ""
	$(COMPOSE) up -d
	@echo "  ðŸŒ€ Waiting for ScyllaDB node to materialize in this dimension..."
	@until $(COMPOSE) exec scylladb nodetool status 2>/dev/null | grep -q "^UN"; do sleep 2; done
	@echo "  âœ“ ScyllaDB is UP â€” dimensional mirror calibrated"
	@echo "  ðŸ”§ Creating keyspace '$(KEYSPACE)' across all reflections..."
	$(COMPOSE) exec scylladb cqlsh -e \
	  "CREATE KEYSPACE IF NOT EXISTS $(KEYSPACE) \
	   WITH replication = {'class': 'SimpleStrategy', 'replication_factor': '1'};"
	@echo "  âœ“ Keyspace ready â€” The Oracle can see all timelines"
	@echo ""

db-down:                        ## Stop ScyllaDB
	@echo "  ðŸŒ€ Dimming The Oracle's mirrors... shutting down ScyllaDB"
	$(COMPOSE) down
	@echo "  âœ“ The Oracle has closed its eyes"

seed: db-up                     ## Seed sample data (depends on db-up)
	@echo "  ðŸ”® The Oracle is materializing product reflections..."
	@echo ""
	uv run python seed.py --count 50

run: seed                       ## Install deps, seed, and start the app
	@echo ""
	@echo "  ðŸ”® Launching The Oracle's Mirror interface..."
	@echo "  ðŸ“¡ http://127.0.0.1:8000 â€” Dimension-9 portal active"
	@echo ""
	uv run uvicorn main:app --reload

clean: db-down                  ## Stop DB and remove data volumes
	$(COMPOSE) down -v
	@echo "  âœ“ All reflections shattered â€” mirror reset"
