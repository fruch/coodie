COMPOSE  := docker compose -f ../docker-compose.yml
KEYSPACE := registry

.PHONY: db-up db-down seed run clean

db-up:                          ## Start ScyllaDB and create keyspace
	@echo ""
	@echo "  ğŸ›¡ï¸  THE IDENTITY REGISTRY â€” Dimension-6"
	@echo "  â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
	@echo "  IF-NOT-EXISTS is booting up..."
	@echo ""
	$(COMPOSE) up -d
	@echo "  ğŸŒ€ Waiting for ScyllaDB node to materialize in this dimension..."
	@until $(COMPOSE) exec scylladb nodetool status 2>/dev/null | grep -q "^UN"; do sleep 2; done
	@echo "  âœ“ ScyllaDB is UP â€” identity matrix established"
	@echo "  ğŸ”§ Creating keyspace '$(KEYSPACE)' across all timelines..."
	$(COMPOSE) exec scylladb cqlsh -e \
	  "CREATE KEYSPACE IF NOT EXISTS $(KEYSPACE) \
	   WITH replication = {'class': 'SimpleStrategy', 'replication_factor': '1'};"
	@echo "  âœ“ Keyspace ready â€” the Registry is online"
	@echo ""

db-down:                        ## Stop ScyllaDB
	@echo "  ğŸŒ€ Shutting down identity matrix... disconnecting ScyllaDB"
	$(COMPOSE) down
	@echo "  âœ“ IF-NOT-EXISTS has logged off"

seed: db-up                     ## Seed sample data (depends on db-up)
	@echo "  ğŸ›¡ï¸  Deploying hero identities and triggering Doppel-9 clone attack..."
	@echo ""
	uv run python seed.py --count 40

run: seed                       ## Install deps, seed, and start the app
	@echo ""
	@echo "  ğŸ›¡ï¸  Launching The Identity Registry interface..."
	@echo "  ğŸ“¡ http://127.0.0.1:8000 â€” Dimension-6 portal active"
	@echo ""
	uv run uvicorn main:app --reload

clean: db-down                  ## Stop DB and remove data volumes
	$(COMPOSE) down -v
	@echo "  âœ“ All identity data purged â€” timeline reset"
