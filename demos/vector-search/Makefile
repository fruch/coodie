COMPOSE  := docker compose -f ../docker-compose.yml
KEYSPACE := vector_demo

.PHONY: db-up db-down seed run clean

db-up:                          ## Start ScyllaDB and create keyspace
	@echo ""
	@echo "  ğŸ”  VECTOR SEARCH â€” Neural Product Index"
	@echo "  â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
	@echo "  Booting ScyllaDB for vector similarity search..."
	@echo ""
	$(COMPOSE) up -d
	@echo "  ğŸŒ€ Waiting for ScyllaDB node to come online..."
	@until $(COMPOSE) exec scylladb nodetool status 2>/dev/null | grep -q "^UN"; do sleep 2; done
	@echo "  âœ“ ScyllaDB is UP"
	@echo "  ğŸ”§ Creating keyspace '$(KEYSPACE)'..."
	$(COMPOSE) exec scylladb cqlsh -e \
	  "CREATE KEYSPACE IF NOT EXISTS $(KEYSPACE) \
	   WITH replication = {'class': 'SimpleStrategy', 'replication_factor': '1'};"
	@echo "  âœ“ Keyspace ready â€” neural index can be deployed"
	@echo ""

db-down:                        ## Stop ScyllaDB
	@echo "  ğŸŒ€ Shutting down ScyllaDB..."
	$(COMPOSE) down
	@echo "  âœ“ ScyllaDB stopped"

seed: db-up                     ## Seed sample product embeddings
	@echo "  ğŸ§  Computing embeddings and seeding products..."
	@echo ""
	uv run python seed.py --count 30

run: seed                       ## Install deps, seed, and start the app
	@echo ""
	@echo "  ğŸ” Launching Vector Search demo..."
	@echo "  ğŸ“¡ http://127.0.0.1:8000 â€” search portal active"
	@echo ""
	uv run uvicorn main:app --reload

clean: db-down                  ## Stop DB and remove data volumes
	$(COMPOSE) down -v
	@echo "  âœ“ All vector data purged"
