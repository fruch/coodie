COMPOSE  := docker compose -f ../docker-compose.yml
KEYSPACE := tagmind

.PHONY: db-up db-down seed run clean

db-up:                          ## Start ScyllaDB and create keyspace
	@echo ""
	@echo "  ðŸ“š  TAGMIND â€” The Infinite Taxonomy // Dimension-8"
	@echo "  â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
	@echo "  Booting the universal classification engine..."
	@echo ""
	$(COMPOSE) up -d
	@echo "  ðŸŒ€ Waiting for ScyllaDB node to stabilize..."
	@until $(COMPOSE) exec scylladb nodetool status 2>/dev/null | grep -q "^UN"; do sleep 2; done
	@echo "  âœ“ ScyllaDB is UP â€” taxonomy matrix established"
	@echo "  ðŸ”§ Creating keyspace '$(KEYSPACE)' for article tagging..."
	$(COMPOSE) exec scylladb cqlsh -e \
	  "CREATE KEYSPACE IF NOT EXISTS $(KEYSPACE) \
	   WITH replication = {'class': 'SimpleStrategy', 'replication_factor': '1'};"
	@echo "  âœ“ Keyspace ready â€” TagMind is online"
	@echo ""

db-down:                        ## Stop ScyllaDB
	@echo "  ðŸŒ€ Shutting down taxonomy matrix... disconnecting ScyllaDB"
	$(COMPOSE) down
	@echo "  âœ“ TagMind has logged off"

seed: db-up                     ## Seed sample data (depends on db-up)
	@echo "  ðŸ“š  Deploying articles and triggering tag classification..."
	@echo ""
	uv run python seed.py --count 30

run: seed                       ## Install deps, seed, and start the app
	@echo ""
	@echo "  ðŸ“š  Launching The Infinite Taxonomy interface..."
	@echo "  ðŸ“¡ http://127.0.0.1:8000 â€” Dimension-8 portal active"
	@echo ""
	uv run uvicorn main:app --reload

clean: db-down                  ## Stop DB and remove data volumes
	$(COMPOSE) down -v
	@echo "  âœ“ All taxonomy data purged â€” dimension reset"
