COMPOSE  := docker compose -f ../docker-compose.yml
KEYSPACE := ephemera

.PHONY: db-up db-down seed run clean

db-up:                          ## Start ScyllaDB and create keyspace
	@echo ""
	@echo "  ğŸ‘» THE MEMORY THIEF â€” Dimension-4"
	@echo "  â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
	@echo "  Ephemera is booting up..."
	@echo ""
	$(COMPOSE) up -d
	@echo "  ğŸŒ€ Waiting for ScyllaDB node to materialize in this dimension..."
	@until $(COMPOSE) exec scylladb nodetool status 2>/dev/null | grep -q "^UN"; do sleep 2; done
	@echo "  âœ“ ScyllaDB is UP â€” memory extraction network established"
	@echo "  ğŸ”§ Creating keyspace '$(KEYSPACE)' across all timelines..."
	$(COMPOSE) exec scylladb cqlsh -e \
	  "CREATE KEYSPACE IF NOT EXISTS $(KEYSPACE) \
	   WITH replication = {'class': 'SimpleStrategy', 'replication_factor': '1'};"
	@echo "  âœ“ Keyspace ready â€” the Memory Vault is online"
	@echo ""

db-down:                        ## Stop ScyllaDB
	@echo "  ğŸŒ€ Shutting down memory extraction network... disconnecting ScyllaDB"
	$(COMPOSE) down
	@echo "  âœ“ Ephemera has been contained"

seed: db-up                     ## Seed sample data (depends on db-up)
	@echo "  ğŸ‘» Extracting memories from Dimension-4 inhabitants..."
	@echo ""
	uv run python seed.py --count 20 --ttl 30

run: seed                       ## Install deps, seed, and start the app
	@echo ""
	@echo "  ğŸ‘» Launching The Memory Thief interface..."
	@echo "  ğŸ“¡ http://127.0.0.1:8000 â€” Dimension-4 portal active"
	@echo "  â³ Seeded memories will expire in 30 seconds â€” watch the UI!"
	@echo ""
	uv run uvicorn main:app --reload

clean: db-down                  ## Stop DB and remove data volumes
	$(COMPOSE) down -v
	@echo "  âœ“ All memory data purged â€” timeline reset"
